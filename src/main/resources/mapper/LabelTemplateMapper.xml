<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zebrarfid.demo.mapper.LabelTemplateMapper">
    <resultMap id="BaseResultMap" type="com.zebrarfid.demo.entity.LabelTemplate">
        <id column="id" property="id"/>
        <result column="version" property="version"/>
        <result column="template_json" property="templateJson"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" parameterType="com.zebrarfid.demo.entity.LabelTemplate">
        INSERT INTO label_template (id, version, template_json, create_time, update_time)
        VALUES (#{id}, #{version}, #{templateJson}, #{createTime}, #{updateTime})
    </insert>

    <update id="updateById" parameterType="com.zebrarfid.demo.entity.LabelTemplate">
        UPDATE label_template
        SET version = #{version},
            template_json = #{templateJson},
            update_time = #{updateTime}
        WHERE id = #{id}
    </update>

    <select id="selectById" parameterType="String" resultMap="BaseResultMap">
        SELECT * FROM label_template WHERE id = #{id}
    </select>
</mapper>
